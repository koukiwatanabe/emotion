<ul class="media-list">
  <% posts.each do |post| %>
    <li class="media">
      <div class="media-body">
        <div class="media-title">
          <%= link_to post.title, post %>
        </div>
        <div class="media-user">
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div class="media-image">
          <p><%= image_tag(post.picture, :width => "500", :height => "responsive") %></p>
        </div>
        <div class="media-content">
          <p><%= post.content %></p>
        </div>
        <div>
          <% if current_user == post.user %>
            <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
          <%= render 'favorites/like_button', post: post %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @posts %>
</ul>